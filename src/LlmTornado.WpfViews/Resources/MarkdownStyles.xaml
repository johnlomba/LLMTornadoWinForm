<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mdxaml="clr-namespace:MdXaml;assembly=MdXaml">
    
    <!-- Markdown viewer style for dark theme -->
    <Style x:Key="DarkMarkdownStyle" TargetType="FlowDocument">
        <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#CDD6F4" />
        <Setter Property="PagePadding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- Code block style -->
    <Style x:Key="CodeBlockStyle" TargetType="Section">
        <Setter Property="Background" Value="#11111B" />
        <Setter Property="Padding" Value="12" />
    </Style>
    
    <!-- Inline code style -->
    <Style x:Key="InlineCodeStyle" TargetType="Run">
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace" />
        <Setter Property="Background" Value="#11111B" />
    </Style>
    
</ResourceDictionary>

