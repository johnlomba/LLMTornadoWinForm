<UserControl x:Class="LlmTornado.WpfViews.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:views="clr-namespace:LlmTornado.WpfViews.Views"
             xmlns:vm="clr-namespace:LlmTornado.WpfViews.ViewModels"
             xmlns:converters="clr-namespace:LlmTornado.WpfViews.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ChatViewModel}"
             AllowDrop="True"
             Drop="ChatView_Drop"
             DragOver="ChatView_DragOver">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        
        <!-- Attachment preview item template -->
        <DataTemplate x:Key="AttachmentPreviewTemplate" DataType="{x:Type vm:FileAttachmentViewModel}">
            <Border Background="#313244" 
                    CornerRadius="8" 
                    Padding="8"
                    Margin="0,0,8,0"
                    MaxWidth="140">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!-- Thumbnail or document icon -->
                    <Border Grid.Row="0" 
                            Background="#252536" 
                            CornerRadius="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <!-- Image thumbnail -->
                        <Image Source="{Binding Thumbnail}" 
                               MaxWidth="60" 
                               MaxHeight="60"
                               Stretch="Uniform"
                               Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </Border>
                    
                    <!-- PDF icon for documents -->
                    <Border Grid.Row="0" 
                            Background="#252536" 
                            CornerRadius="4"
                            Width="60" 
                            Height="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsDocument, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="PDF" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#F38BA8"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    
                    <!-- Loading indicator -->
                    <Border Grid.Row="0" 
                            Background="#252536" 
                            CornerRadius="4"
                            Width="60" 
                            Height="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="..." 
                                   FontSize="16"
                                   Foreground="#A6ADC8"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    
                    <!-- File info -->
                    <StackPanel Grid.Row="1" Margin="0,6,0,0">
                        <TextBlock Text="{Binding FileName}" 
                                   Foreground="#CDD6F4"
                                   FontSize="11"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="120"
                                   ToolTip="{Binding FileName}" />
                        <TextBlock Text="{Binding FileSizeDisplay}" 
                                   Foreground="#6C7086"
                                   FontSize="10" />
                    </StackPanel>
                    
                    <!-- Remove button -->
                    <Button Grid.Row="0"
                            Command="{Binding RemoveCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-4,-4,0"
                            Width="20"
                            Height="20"
                            Padding="0"
                            Cursor="Hand"
                            ToolTip="Remove attachment">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border" 
                                        Background="#F38BA8" 
                                        CornerRadius="10"
                                        Width="20"
                                        Height="20">
                                    <TextBlock Text="Ã—" 
                                               FontSize="14" 
                                               FontWeight="Bold"
                                               Foreground="#1E1E2E"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,-2,0,0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#EBA0AC" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- System prompt display -->
        <Border Grid.Row="0" 
                Background="#252536" 
                Padding="16"
                Visibility="{Binding SystemPromptContent, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="System Prompt Template" 
                           FontWeight="SemiBold" 
                           Foreground="#89B4FA"
                           FontSize="12"
                           Margin="0,0,0,8" />
                <Border Background="#1E1E2E" 
                        CornerRadius="8" 
                        Padding="12">
                    <TextBlock Text="{Binding SystemPromptContent}"
                               Foreground="#A6ADC8"
                               TextWrapping="Wrap"
                               FontSize="13" />
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Messages list -->
        <ScrollViewer Grid.Row="1" 
                      x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1E1E2E">
            <ItemsControl ItemsSource="{Binding Messages}"
                          Margin="0,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:MessageViewModel}">
                        <views:MessageBubble DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Attachment preview panel -->
        <Border Grid.Row="2" 
                Background="#181825"
                Padding="16,12,16,0"
                Visibility="{Binding HasPendingAttachments, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <TextBlock Text="Attachments" 
                               Foreground="#89B4FA"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                    <Button Command="{Binding ClearAttachmentsCommand}"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Clear all attachments">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock x:Name="Text" 
                                           Text="Clear all" 
                                           Foreground="#6C7086"
                                           FontSize="11" />
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Text" Property="Foreground" Value="#F38BA8" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              MaxHeight="120">
                    <ItemsControl ItemsSource="{Binding PendingAttachments}"
                                  ItemTemplate="{StaticResource AttachmentPreviewTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
        
        <!-- Input area -->
        <Border Grid.Row="3" 
                Background="#181825" 
                Padding="16"
                BorderThickness="0,1,0,0"
                BorderBrush="#45475A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Attachment button -->
                <Button Grid.Column="0"
                        Command="{Binding AddAttachmentCommand}"
                        Margin="0,0,8,0"
                        Padding="10"
                        ToolTip="Attach files (images, PDFs)"
                        Cursor="Hand"
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="#252536" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="#45475A"
                                    BorderThickness="1">
                                <Path x:Name="Icon"
                                      Data="M16.5 6v11.5c0 2.21-1.79 4-4 4s-4-1.79-4-4V5c0-1.38 1.12-2.5 2.5-2.5s2.5 1.12 2.5 2.5v10.5c0 .55-.45 1-1 1s-1-.45-1-1V6H10v9.5c0 1.38 1.12 2.5 2.5 2.5s2.5-1.12 2.5-2.5V5c0-2.21-1.79-4-4-4S7 2.79 7 5v12.5c0 3.04 2.46 5.5 5.5 5.5s5.5-2.46 5.5-5.5V6h-1.5z"
                                      Fill="#A6ADC8"
                                      Stretch="Uniform"
                                      Width="18"
                                      Height="18" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#89B4FA" />
                                    <Setter TargetName="Icon" Property="Fill" Value="#89B4FA" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Input text box -->
                <Border Grid.Column="1" 
                        Background="#252536" 
                        CornerRadius="8"
                        BorderBrush="#45475A"
                        BorderThickness="1">
                    <TextBox x:Name="InputTextBox"
                             Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="#CDD6F4"
                             CaretBrush="#89B4FA"
                             BorderThickness="0"
                             Padding="12,10"
                             FontSize="14"
                             FontFamily="Segoe UI Variable, Segoe UI"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="120"
                             VerticalScrollBarVisibility="Auto"
                             ui:ControlHelper.PlaceholderText="Send a message..."
                             IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
                             KeyDown="InputTextBox_KeyDown" />
                </Border>
                
                <!-- Send button -->
                <Button Grid.Column="2"
                        Command="{Binding SendMessageCommand}"
                        Margin="8,0,0,0"
                        Padding="16,10"
                        Background="#89B4FA"
                        Foreground="#1E1E2E"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#B4BEFE" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Send" />
                        <TextBlock Text=" (Ctrl+Enter)" FontSize="11" Opacity="0.7" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                
                <!-- Cancel button -->
                <Button Grid.Column="3"
                        Command="{Binding CancelCommand}"
                        Margin="8,0,0,0"
                        Padding="16,10"
                        Background="#F38BA8"
                        Foreground="#1E1E2E"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Cancel" />
                </Button>
            </Grid>
        </Border>
        
        <!-- Drag-drop overlay -->
        <Border x:Name="DragDropOverlay"
                Grid.Row="0"
                Grid.RowSpan="4"
                Background="#CC1E1E2E"
                Visibility="Collapsed"
                IsHitTestVisible="False">
            <Border Background="#313244"
                    CornerRadius="16"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#89B4FA"
                    BorderThickness="2">
                <StackPanel HorizontalAlignment="Center">
                    <Path Data="M16.5 6v11.5c0 2.21-1.79 4-4 4s-4-1.79-4-4V5c0-1.38 1.12-2.5 2.5-2.5s2.5 1.12 2.5 2.5v10.5c0 .55-.45 1-1 1s-1-.45-1-1V6H10v9.5c0 1.38 1.12 2.5 2.5 2.5s2.5-1.12 2.5-2.5V5c0-2.21-1.79-4-4-4S7 2.79 7 5v12.5c0 3.04 2.46 5.5 5.5 5.5s5.5-2.46 5.5-5.5V6h-1.5z"
                          Fill="#89B4FA"
                          Stretch="Uniform"
                          Width="48"
                          Height="48"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16" />
                    <TextBlock Text="Drop files here"
                               Foreground="#CDD6F4"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Images (PNG, JPG, GIF, WebP) and PDFs"
                               Foreground="#6C7086"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Error message overlay -->
        <Border Grid.Row="1" 
                Background="#80000000"
                Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}"
                VerticalAlignment="Top"
                Margin="16">
            <Border Background="#F38BA8" 
                    CornerRadius="8" 
                    Padding="16">
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#1E1E2E"
                           TextWrapping="Wrap"
                           FontWeight="Medium" />
            </Border>
        </Border>
    </Grid>
</UserControl>
