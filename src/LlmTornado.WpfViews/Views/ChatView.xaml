<UserControl x:Class="LlmTornado.WpfViews.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:views="clr-namespace:LlmTornado.WpfViews.Views"
             xmlns:vm="clr-namespace:LlmTornado.WpfViews.ViewModels"
             xmlns:converters="clr-namespace:LlmTornado.WpfViews.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ChatViewModel}">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>
    
    <Grid Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- System prompt display -->
        <Border Grid.Row="0" 
                Background="#252536" 
                Padding="16"
                Visibility="{Binding SystemPromptContent, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="System Prompt Template" 
                           FontWeight="SemiBold" 
                           Foreground="#89B4FA"
                           FontSize="12"
                           Margin="0,0,0,8" />
                <Border Background="#1E1E2E" 
                        CornerRadius="8" 
                        Padding="12">
                    <TextBlock Text="{Binding SystemPromptContent}"
                               Foreground="#A6ADC8"
                               TextWrapping="Wrap"
                               FontSize="13" />
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Messages list -->
        <ScrollViewer Grid.Row="1" 
                      x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1E1E2E">
            <ItemsControl ItemsSource="{Binding Messages}"
                          Margin="0,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:MessageViewModel}">
                        <views:MessageBubble DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Input area -->
        <Border Grid.Row="2" 
                Background="#181825" 
                Padding="16"
                BorderThickness="0,1,0,0"
                BorderBrush="#45475A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Input text box -->
                <Border Grid.Column="0" 
                        Background="#252536" 
                        CornerRadius="8"
                        BorderBrush="#45475A"
                        BorderThickness="1">
                    <TextBox x:Name="InputTextBox"
                             Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="#CDD6F4"
                             CaretBrush="#89B4FA"
                             BorderThickness="0"
                             Padding="12,10"
                             FontSize="14"
                             FontFamily="Segoe UI Variable, Segoe UI"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="120"
                             VerticalScrollBarVisibility="Auto"
                             ui:ControlHelper.PlaceholderText="Send a message..."
                             IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
                             KeyDown="InputTextBox_KeyDown" />
                </Border>
                
                <!-- Send button -->
                <Button Grid.Column="1"
                        Command="{Binding SendMessageCommand}"
                        Margin="8,0,0,0"
                        Padding="16,10"
                        Background="#89B4FA"
                        Foreground="#1E1E2E"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#B4BEFE" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Send" />
                        <TextBlock Text=" (Ctrl+Enter)" FontSize="11" Opacity="0.7" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                
                <!-- Cancel button -->
                <Button Grid.Column="2"
                        Command="{Binding CancelCommand}"
                        Margin="8,0,0,0"
                        Padding="16,10"
                        Background="#F38BA8"
                        Foreground="#1E1E2E"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Cancel" />
                </Button>
            </Grid>
        </Border>
        
        <!-- Error message overlay -->
        <Border Grid.Row="1" 
                Background="#80000000"
                Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}"
                VerticalAlignment="Top"
                Margin="16">
            <Border Background="#F38BA8" 
                    CornerRadius="8" 
                    Padding="16">
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#1E1E2E"
                           TextWrapping="Wrap"
                           FontWeight="Medium" />
            </Border>
        </Border>
    </Grid>
</UserControl>

