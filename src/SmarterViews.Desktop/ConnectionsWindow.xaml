<Window x:Class="SmarterViews.Desktop.ConnectionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SmarterViews.Desktop"
        xmlns:vm="clr-namespace:SmarterViews.Desktop.ViewModels"
        Title="Database Connections" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    
    <Window.DataContext>
        <vm:ConnectionsViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="15,10">
            <TextBlock Text="Manage Database Connections" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Connections List -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <TextBlock Text="Saved Connections" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Connections}" 
                         SelectedItem="{Binding SelectedConnection}"
                         Height="400"
                         BorderBrush="#CCCCCC" BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DatabaseType}" FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="(Default)" FontSize="10" Foreground="Green" Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Connection Form -->
            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                <TextBlock Text="Connection Details" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <!-- Connection Name -->
                <TextBlock Text="Name:" FontSize="12" Margin="0,0,0,5"/>
                <TextBox Text="{Binding ConnectionName, UpdateSourceTrigger=PropertyChanged}" 
                         Height="35" Padding="10" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10"/>

                <!-- Database Type -->
                <TextBlock Text="Database Type:" FontSize="12" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Source={x:Static local:DatabaseTypes.Types}}" 
                          SelectedItem="{Binding DatabaseType}" 
                          Height="35" Padding="10" Margin="0,0,0,10"/>

                <!-- Connection String -->
                <TextBlock Text="Connection String:" FontSize="12" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Text="{Binding ConnectionString, UpdateSourceTrigger=PropertyChanged}" 
                             Height="80" Padding="10" BorderBrush="#CCCCCC" BorderThickness="1" 
                             VerticalAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True"/>
                    <Button Grid.Row="1" Content="?? Build Connection String..." 
                            Height="30" Margin="0,5,0,0" 
                            Click="BuildConnectionString_Click"
                            Background="#2196F3" Foreground="White"
                            HorizontalAlignment="Left" Padding="15,5"/>
                </Grid>

                <!-- Default Checkbox -->
                <CheckBox Content="Set as Default Connection" 
                          IsChecked="{Binding IsDefault}" 
                          Margin="0,0,0,15"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" FontSize="11" 
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                           Margin="0,0,0,10"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Test Connection" 
                            Width="120" Height="35" Margin="0,0,10,0" 
                            Click="TestConnection_Click"
                            Background="#FF9800" Foreground="White"/>
                    <Button Content="Clear" 
                            Command="{Binding ClearFormCommand}"
                            Width="80" Height="35" Margin="0,0,10,0" Background="#F0F0F0"/>
                    <Button Content="Edit Selected" 
                            Command="{Binding EditConnectionCommand}"
                            Width="100" Height="35" Margin="0,0,10,0" Background="#FFC107"/>
                    <Button Content="Delete" 
                            Command="{Binding DeleteConnectionCommand}"
                            Width="80" Height="35" Margin="0,0,10,0" Background="#F44336" Foreground="White"/>
                    <Button Content="Save" 
                            Command="{Binding SaveConnectionCommand}"
                            Width="80" Height="35" Background="#4CAF50" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Loading Indicator -->
        <Border Grid.Row="1" Background="Black" Opacity="0.5" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Loading..." Foreground="White" FontSize="16" 
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15" BorderThickness="0,1,0,0" BorderBrush="#CCCCCC">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Width="80" Height="35" Click="CloseButton_Click" Background="#757575" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
