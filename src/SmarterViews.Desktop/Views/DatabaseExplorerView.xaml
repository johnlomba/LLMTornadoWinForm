<UserControl x:Class="SmarterViews.Desktop.Views.DatabaseExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SmarterViews.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">
    
    <UserControl.DataContext>
        <vm:DatabaseExplorerViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- TreeView Item Template for Schema Browser -->
        <HierarchicalDataTemplate x:Key="SchemaTreeItemTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Icon}" Margin="0,0,5,0" FontSize="12"/>
                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <!-- Schema Browser Panel -->
            <ColumnDefinition Width="280" MinWidth="200"/>
            <!-- Splitter -->
            <ColumnDefinition Width="Auto"/>
            <!-- Results Panel -->
            <ColumnDefinition Width="*" MinWidth="300"/>
            <!-- Splitter -->
            <ColumnDefinition Width="Auto"/>
            <!-- SQL Editor Panel -->
            <ColumnDefinition Width="350" MinWidth="250"/>
        </Grid.ColumnDefinitions>

        <!-- Schema Browser Panel -->
        <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="8" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1976D2" CornerRadius="8,8,0,0" Padding="12,10">
                    <TextBlock Text="Database Explorer" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                </Border>

                <!-- Connection Selector -->
                <Border Grid.Row="1" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Connection:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0" 
                                      ItemsSource="{Binding Connections}"
                                      SelectedItem="{Binding SelectedConnection}"
                                      DisplayMemberPath="Name"
                                      Height="30"
                                      VerticalContentAlignment="Center"/>
                            
                            <Button Grid.Column="1" 
                                    Content="↻" 
                                    Width="30" Height="30"
                                    Margin="5,0,0,0"
                                    Command="{Binding LoadSchemaCommand}"
                                    ToolTip="Refresh Schema"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Schema Tree -->
                <TreeView Grid.Row="2" 
                          ItemsSource="{Binding SchemaTree}"
                          ItemTemplate="{StaticResource SchemaTreeItemTemplate}"
                          SelectedItemChanged="SchemaTree_SelectedItemChanged"
                          BorderThickness="0"
                          Padding="5"
                          VirtualizingPanel.IsVirtualizing="True">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="Padding" Value="3"/>
                            <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
                            <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>

                <!-- Loading Overlay -->
                <Border Grid.Row="2" Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading..." FontSize="14" Foreground="#666666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Splitter 1 -->
        <GridSplitter Grid.Column="1" Width="5" Background="#E0E0E0" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"/>

        <!-- Results Panel -->
        <Border Grid.Column="2" Background="White" Margin="5,10" CornerRadius="8"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1976D2" CornerRadius="8,8,0,0" Padding="12,10">
                    <Grid>
                        <TextBlock Text="Query Results" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding RowCount, StringFormat='{}{0} rows'}" 
                                       Foreground="White" FontSize="12" Margin="0,0,15,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ExecutionTime}" 
                                       Foreground="#B3E5FC" FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding QueryResults}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#FAFAFA"
                          BorderThickness="0"
                          Margin="0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>

                <!-- No Results Message -->
                <TextBlock Grid.Row="1" 
                           Text="Execute a query to see results"
                           Foreground="#999999"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding QueryResults, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>

                <!-- Status Bar -->
                <Border Grid.Row="2" Background="#FAFAFA" Padding="10,8" 
                        CornerRadius="0,0,8,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <Grid>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#666666" FontSize="12"/>
                        
                        <!-- Error Message -->
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#F44336" 
                                   FontSize="12"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}"
                                   HorizontalAlignment="Left"/>
                    </Grid>
                </Border>

                <!-- Executing Overlay -->
                <Border Grid.Row="1" Background="#80FFFFFF" 
                        Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Executing query..." FontSize="14" Foreground="#666666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Splitter 2 -->
        <GridSplitter Grid.Column="3" Width="5" Background="#E0E0E0" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"/>

        <!-- SQL Editor Panel -->
        <Border Grid.Column="4" Background="White" Margin="5,10,10,10" CornerRadius="8"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1976D2" CornerRadius="8,8,0,0" Padding="12,10">
                    <TextBlock Text="SQL Query" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                </Border>

                <!-- SQL Editor -->
                <TextBox Grid.Row="1" 
                         Text="{Binding SqlText, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas, Courier New"
                         FontSize="13"
                         Padding="10"
                         BorderThickness="0"
                         Background="#263238"
                         Foreground="#4FC3F7"
                         CaretBrush="#4FC3F7"/>

                <!-- Action Buttons -->
                <Border Grid.Row="2" Background="#F5F5F5" Padding="10" 
                        CornerRadius="0,0,8,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Clear"
                                Command="{Binding ClearQueryCommand}"
                                Height="32"
                                Padding="15,0"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalAlignment="Left"/>

                        <Button Grid.Column="1"
                                Content="▶ Execute"
                                Command="{Binding ExecuteQueryCommand}"
                                IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBoolConverter}}"
                                Height="32"
                                Padding="20,0"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
