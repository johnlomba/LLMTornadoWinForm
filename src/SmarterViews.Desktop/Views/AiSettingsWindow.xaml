<Window x:Class="SmarterViews.Desktop.Views.AiSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SmarterViews.Desktop.Converters"
        Title="AI Settings" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="ApiKeyTextBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1565C0" Padding="20,16">
            <StackPanel>
                <TextBlock Text="AI Configuration" Foreground="White" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="Configure API keys and model settings" Foreground="#B3E5FC" FontSize="12" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                
                <!-- OpenAI Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="OpenAI"/>
                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="API Key"/>
                    <PasswordBox x:Name="OpenAiApiKeyBox" 
                                 Style="{StaticResource ApiKeyTextBoxStyle}"
                                 PasswordChanged="ApiKey_PasswordChanged"
                                 Tag="OpenAi"/>
                    <TextBlock Text="Get your API key from platform.openai.com" 
                               Foreground="#757575" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Anthropic Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Anthropic (Claude)"/>
                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="API Key"/>
                    <PasswordBox x:Name="AnthropicApiKeyBox" 
                                 Style="{StaticResource ApiKeyTextBoxStyle}"
                                 PasswordChanged="ApiKey_PasswordChanged"
                                 Tag="Anthropic"/>
                    <TextBlock Text="Get your API key from console.anthropic.com" 
                               Foreground="#757575" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Google Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Google AI (Gemini)"/>
                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="API Key"/>
                    <PasswordBox x:Name="GoogleApiKeyBox" 
                                 Style="{StaticResource ApiKeyTextBoxStyle}"
                                 PasswordChanged="ApiKey_PasswordChanged"
                                 Tag="Google"/>
                    <TextBlock Text="Get your API key from aistudio.google.com" 
                               Foreground="#757575" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Model Settings -->
                <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Model Settings"/>
                        
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Temperature"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="TemperatureSlider" 
                                    Minimum="0" Maximum="2" 
                                    Value="0.7"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="Temperature_ValueChanged"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding ElementName=TemperatureSlider, Path=Value, StringFormat='{}{0:F1}'}"
                                       FontSize="14" FontWeight="Medium"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Lower = more focused, Higher = more creative" 
                                   Foreground="#757575" FontSize="11" Margin="0,4,0,0"/>

                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Max Tokens" Margin="0,16,0,6"/>
                        <TextBox x:Name="MaxTokensBox"
                                 Text="4096"
                                 Height="38"
                                 FontSize="14"
                                 Padding="10,8"
                                 TextChanged="MaxTokens_TextChanged"/>
                        <TextBlock Text="Maximum length of AI response" 
                                   Foreground="#757575" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECEFF1" Padding="20,14" BorderBrush="#CFD8DC" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Ellipse Width="10" Height="10" x:Name="StatusIndicator" Fill="#4CAF50"/>
                    <TextBlock x:Name="StatusText" Text="Settings saved" Foreground="#616161" FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Close" 
                        HorizontalAlignment="Right"
                        Padding="24,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Background="#1565C0" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <TextBlock Text="{TemplateBinding Content}" Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
