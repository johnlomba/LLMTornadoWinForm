<UserControl x:Class="SmarterViews.Desktop.Views.DataExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SmarterViews.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance vm:DataExplorerViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <!-- Large, accessible button style -->
        <Style x:Key="LargeButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary action button (green) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource LargeButtonStyle}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Secondary action button (blue) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource LargeButtonStyle}">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Danger button (red) -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource LargeButtonStyle}">
            <Setter Property="Background" Value="#C62828"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <!-- Accessible ComboBox style -->
        <Style x:Key="LargeComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Accessible TextBox style -->
        <Style x:Key="LargeTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Section header style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Label style -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Help text style -->
        <Style x:Key="HelpTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#ECEFF1">
        <Grid.ColumnDefinitions>
            <!-- Query Builder Panel -->
            <ColumnDefinition Width="420" MinWidth="350"/>
            <!-- Splitter -->
            <ColumnDefinition Width="Auto"/>
            <!-- Results Panel -->
            <ColumnDefinition Width="*" MinWidth="400"/>
            <!-- Splitter -->
            <ColumnDefinition Width="Auto"/>
            <!-- SQL Panel -->
            <ColumnDefinition Width="320" MinWidth="280"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Query Builder -->
        <Border Grid.Column="0" Background="White" Margin="12" CornerRadius="12" 
                BorderBrush="#CFD8DC" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Connection Status -->
                <Border Grid.Row="0" Background="#1565C0" CornerRadius="12,12,0,0" Padding="16,14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Build Your Query" Foreground="White" FontWeight="Bold" FontSize="18"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                            <Ellipse Width="10" Height="10" 
                                     Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}, FallbackValue=#F44336}"/>
                            <TextBlock Text="{Binding ConnectionStatusText, FallbackValue='No database connected'}" 
                                       Foreground="#B3E5FC" FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="18">
                    <StackPanel>
                        
                        <!-- Step 1: Select Database Connection -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Style="{StaticResource SectionHeaderStyle}">
                                <Run Text="Step 1:"/> <Run Text=" Choose Database" FontWeight="Normal"/>
                            </TextBlock>
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Database Connection"/>
                            <ComboBox ItemsSource="{Binding AvailableConnections}"
                                      SelectedItem="{Binding SelectedConnection}"
                                      DisplayMemberPath="Name"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      ToolTip="Select the database you want to query"/>
                            <TextBlock Style="{StaticResource HelpTextStyle}" 
                                       Text="Pick which database to search in"/>
                        </StackPanel>

                        <!-- Step 2: Select Table -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Style="{StaticResource SectionHeaderStyle}">
                                <Run Text="Step 2:"/> <Run Text=" Choose Table" FontWeight="Normal"/>
                            </TextBlock>
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Table or View"/>
                            <ComboBox ItemsSource="{Binding AvailableTables}"
                                      SelectedItem="{Binding SelectedTable}"
                                      DisplayMemberPath="DisplayName"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      IsEnabled="{Binding IsConnected}"
                                      ToolTip="Select the table containing your data"/>
                            <TextBlock Style="{StaticResource HelpTextStyle}" 
                                       Text="Tables hold your data - pick one to search"/>
                        </StackPanel>

                        <!-- Step 3: Add Filters -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,5,0,0">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                                    <Run Text="Step 3:"/> <Run Text=" Add Filters (Optional)" FontWeight="Normal"/>
                                </TextBlock>
                                
                                <!-- AND/OR Toggle -->
                                <Border Background="#F5F5F5" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="How should filters combine?"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <RadioButton Content="Match ALL filters (AND)" 
                                                         IsChecked="{Binding IsAndCondition}"
                                                         GroupName="Condition" 
                                                         FontSize="13" Margin="0,0,20,0"
                                                         ToolTip="All conditions must be true"/>
                                            <RadioButton Content="Match ANY filter (OR)" 
                                                         IsChecked="{Binding IsOrCondition}"
                                                         GroupName="Condition" 
                                                         FontSize="13"
                                                         ToolTip="At least one condition must be true"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Add Filter Button -->
                                <Button Content="+ Add a Filter" 
                                        Command="{Binding AddRuleCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        IsEnabled="{Binding HasSelectedTable}"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,15"/>

                                <!-- Filter Rules List -->
                                <ItemsControl ItemsSource="{Binding Rules}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FAFAFA" CornerRadius="8" Padding="15" Margin="0,0,0,12"
                                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Remove button -->
                                                    <Button Grid.Row="0" Grid.Column="1" 
                                                            Content="X Remove" 
                                                            Command="{Binding DataContext.RemoveRuleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource DangerButtonStyle}"
                                                            VerticalAlignment="Top"/>

                                                    <!-- Field Selection -->
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Field (Column)"/>
                                                        <ComboBox ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  SelectedItem="{Binding SelectedColumn}"
                                                                  DisplayMemberPath="DisplayName"
                                                                  Style="{StaticResource LargeComboBoxStyle}"
                                                                  ToolTip="Choose which field to filter on"/>
                                                    </StackPanel>

                                                    <!-- Operator Selection -->
                                                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Condition"/>
                                                        <ComboBox ItemsSource="{Binding AvailableOperators}"
                                                                  SelectedItem="{Binding SelectedOperator}"
                                                                  DisplayMemberPath="DisplayName"
                                                                  Style="{StaticResource LargeComboBoxStyle}"
                                                                  ToolTip="{Binding SelectedOperator.Description}"/>
                                                    </StackPanel>

                                                    <!-- Value Input - changes based on data type -->
                                                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Value"/>
                                                        
                                                        <!-- String value (default) -->
                                                        <TextBox Text="{Binding StringValue, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource LargeTextBoxStyle}"
                                                                 Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=string}"
                                                                 ToolTip="Enter the value to search for"/>

                                                        <!-- Date value -->
                                                        <DatePicker SelectedDate="{Binding DateValue}"
                                                                    Height="40" FontSize="14"
                                                                    Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=date}"
                                                                    ToolTip="Pick a date"/>

                                                        <!-- Number value -->
                                                        <TextBox Text="{Binding NumericValue, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource LargeTextBoxStyle}"
                                                                 Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=number}"
                                                                 ToolTip="Enter a number"/>

                                                        <!-- Boolean value -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=boolean}">
                                                            <RadioButton Content="Yes / True" 
                                                                         IsChecked="{Binding BooleanValue}"
                                                                         GroupName="{Binding Field}"
                                                                         FontSize="14" Margin="0,0,20,0"/>
                                                            <RadioButton Content="No / False" 
                                                                         IsChecked="{Binding BooleanValue, Converter={StaticResource InverseBoolConverter}}"
                                                                         GroupName="{Binding Field}"
                                                                         FontSize="14"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Clear All Filters -->
                                <Button Content="Clear All Filters" 
                                        Command="{Binding ClearRulesCommand}"
                                        Style="{StaticResource LargeButtonStyle}"
                                        Background="#9E9E9E" Foreground="White"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding HasRules, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Saved Queries Section -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,20,0,0">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource SectionHeaderStyle}" 
                                               Text="Saved Queries" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="Import" 
                                            Command="{Binding ImportQueryCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Height="32" Padding="12,5"
                                            ToolTip="Import a query from a JSON file"/>
                                    <Button Grid.Column="2" Content="Refresh" 
                                            Command="{Binding LoadSavedQueriesCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Height="32" Padding="12,5" Margin="5,0,0,0"/>
                                </Grid>
                                <ListBox ItemsSource="{Binding SavedQueries}" 
                                         SelectedItem="{Binding SelectedQuery}"
                                         DisplayMemberPath="Name"
                                         MaxHeight="140" 
                                         FontSize="13"
                                         BorderBrush="#BDBDBD"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Load Selected" 
                                            Command="{Binding LoadSelectedQueryCommand}"
                                            Style="{StaticResource LargeButtonStyle}"
                                            Background="#6A1B9A" Foreground="White"
                                            IsEnabled="{Binding SelectedQuery, Converter={StaticResource NullToBoolConverter}}"/>
                                    <Button Content="Export" 
                                            Command="{Binding ExportQueryCommand}"
                                            Style="{StaticResource LargeButtonStyle}"
                                            Background="#00796B" Foreground="White"
                                            Margin="10,0,0,0"
                                            ToolTip="Export selected query to a file"
                                            IsEnabled="{Binding SelectedQuery, Converter={StaticResource NullToBoolConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Splitter 1 -->
        <GridSplitter Grid.Column="1" Width="6" Background="#CFD8DC" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"/>

        <!-- Center Panel - Results Grid -->
        <Border Grid.Column="2" Background="White" Margin="6,12" CornerRadius="12"
                BorderBrush="#CFD8DC" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1565C0" CornerRadius="12,12,0,0" Padding="16,14">
                    <Grid>
                        <TextBlock Text="Query Results" Foreground="White" FontWeight="Bold" FontSize="18"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding QueryResults.Rows.Count, StringFormat='{}{0} rows found', FallbackValue='No results yet'}" 
                                       Foreground="#B3E5FC" FontSize="14" FontWeight="Medium"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding QueryResults}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F5F5F5"
                          BorderThickness="0"
                          FontSize="13">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#ECEFF1"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="BorderBrush" Value="#CFD8DC"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#BBDEFB"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="38"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>

                <!-- No Results Message -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding QueryResults, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                    <TextBlock Text="No results yet"
                               Foreground="#757575"
                               FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a table and click 'Run Query' to see data"
                               Foreground="#9E9E9E"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Loading indicator -->
                <Border Grid.Row="1" Background="#80FFFFFF"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                        <TextBlock Text="Running query..." FontSize="14" Foreground="#424242" 
                                   HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Status Bar / Error Message -->
                <Border Grid.Row="2" Background="#ECEFF1" Padding="12,10" 
                        CornerRadius="0,0,12,12" BorderBrush="#CFD8DC" BorderThickness="0,1,0,0">
                    <Grid>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#C62828"
                                   FontSize="13" FontWeight="Medium"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <TextBlock Text="Ready - select a table and run your query" 
                                   Foreground="#616161"
                                   FontSize="13"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Splitter 2 -->
        <GridSplitter Grid.Column="3" Width="6" Background="#CFD8DC" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"/>

        <!-- Right Panel - SQL Preview & Actions -->
        <Border Grid.Column="4" Background="White" Margin="6,12,12,12" CornerRadius="12"
                BorderBrush="#CFD8DC" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#37474F" CornerRadius="12,12,0,0" Padding="16,14">
                    <TextBlock Text="SQL Preview" Foreground="White" FontWeight="Bold" FontSize="18"/>
                </Border>

                <!-- SQL Display -->
                <TextBox Grid.Row="1" 
                         Text="{Binding GeneratedSql, Mode=OneWay}"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas, Courier New, monospace"
                         FontSize="13"
                         Padding="14"
                         BorderThickness="0"
                         Background="#263238"
                         Foreground="#80DEEA"
                         CaretBrush="#80DEEA"/>

                <!-- Action Buttons -->
                <Border Grid.Row="2" Background="#ECEFF1" Padding="14" 
                        CornerRadius="0,0,12,12" BorderBrush="#CFD8DC" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Primary Actions -->
                        <Button Content="Run Query"
                                Command="{Binding ExecuteQueryCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="{Binding CanExecuteQuery}"
                                Margin="0,0,0,10"/>
                        
                        <Button Content="Generate SQL"
                                Command="{Binding GenerateQueryCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                IsEnabled="{Binding HasSelectedTable}"
                                Margin="0,0,0,10"/>

                        <Button Content="Save Query"
                                Command="{Binding SaveQueryCommand}"
                                Style="{StaticResource LargeButtonStyle}"
                                Background="#6A1B9A" Foreground="White"
                                IsEnabled="{Binding HasSelectedTable}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
